{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "rootDir": "./js",
    "outDir": "../priv/static/ts-compiled",
    "paths": {
      "@/*": [
        "./js/*"
      ],
      "@components/*": [
        "./js/components/*"
      ],
      "@helpers/*": [
        "./js/helpers/*"
      ],
      "@pages/*": [
        "./js/pages/*"
      ],
      "@types": [
        "./js/types.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}